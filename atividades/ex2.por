algoritmo "ExemploEntradaDeDados2"
var
nomeAluno : caractere
nota1 : inteiro
nota2 : inteiro
nota3 : inteiro
notaFinal : inteiro
inicio
escreval(“Digite o nome do aluno………: “ )
 leia(nomeAluno)
 escreval(“Digite a primeira nota do aluno: “ )
 leia(nota1) 
 escreval(“Digite a segunda nota do aluno: “ )
 leia(nota2)
 escreval(“Digite a terceira nota do aluno : “ )
 leia(nota3)
notaFinal <= nota1 + nota2 + nota3
escreval(“A nota final do aluno: " , nomeAluno , “ é: “ , notaFinal )
fimalgoritmo